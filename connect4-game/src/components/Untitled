/* Reset button styling */
.reset-button {
  padding: 12px 24px;              /* Padding inside button (vertical, horizontal) */
  font-size: 1rem;                 /* Font size */
  font-weight: bold;                /* Bold text */
  color: white;                    /* White text color */
  background-color: #e74c3c;       /* Red background color */
  border: none;                     /* Remove default border */
  border-radius: 5px;              /* Rounded corners */
  cursor: pointer;                  /* Show pointer cursor on hover */
  transition: background-color 0.3s, transform 0.1s;  /* Smooth transitions */
  margin-top: 20px;                 /* Space above the button */
}

/* Hover effect when mouse is over the button */
.reset-button:hover {
  background-color: #c0392b;        /* Darker red on hover */
  transform: translateY(-2px);      /* Move button up slightly */
}

/* Active state when button is clicked */
.reset-button:active {
  transform: translateY(0);         /* Return to original position */
}